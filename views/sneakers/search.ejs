                <div style="padding: 10px 0 10px 0; box-shadow: 10px 6px 20px #c7c7c7;" id="trendingthumb" class="thumbnail">
                   <img src="<%= sneaker.image %>">
                   <div class="caption">
                       <h4 style="font-weight: 300; color: #171717"><%= sneaker.name %></h4>
                       <h6 style="font-weight: 200; color: grey">Menor Pre√ßo</h6>
                       <%  %>
                       <h5 style="font-weight: 600; color: black">0000</h5>
                   </div>
                   <p>
                       </a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
</div>

