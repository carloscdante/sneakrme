<% include ../partials/header %>
<div style="margin-bottom: 26.2em" class="page-container">
 <div class="container">
     <header class="jumbotron">
         <div class="container">
            <h4 style="font-weight: bold; text-align: center; padding-top: 30px">Procurar por sneakers...</h4>
            <form action="/search" method="GET">
